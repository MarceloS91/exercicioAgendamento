<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:maxHeight="250dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:orientation="vertical">

    <EditText
        android:id="@+id/nomeOnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textSize="20dp"
        tools:text="Nome:" />

    <EditText
        android:id="@+id/enderecoOnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textSize="20dp"
        tools:text="Endereço:" />


    <EditText
        android:id="@+id/dataOnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Data:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/horarioOnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Horário:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/descricaoOnLayout"
        android:layout_width="match_parent"
        android:enabled="false"
        android:layout_height="56dp"
        android:text="Descrição:"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewLixeira"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/caixa"/>

        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/lapis" />

        <ImageView
            android:id="@+id/imageViewSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/save" />

      </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>